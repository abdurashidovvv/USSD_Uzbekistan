<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CompanyFragment">

    <TextView
        android:id="@+id/tooblar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toTopOf="parent"
        android:text="USSD Uzbekistan"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#039BE5"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/companies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#039BE5"
        app:layout_constraintHeight_percent=".85"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="-25dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/internet"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintRight_toLeftOf="@id/tariflar"
            app:layout_constraintBottom_toTopOf="@id/daqiqalar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:id="@+id/internet_liner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/worldwide"
                    />
                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Internet paketlar"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/tariflar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/internet"
            app:layout_constraintBottom_toTopOf="@id/aksiya"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <LinearLayout
                android:id="@+id/tarif_liner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/documents"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tariflar"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/daqiqalar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="30dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/internet"
            app:layout_constraintRight_toLeftOf="@id/aksiya"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sms">
            <LinearLayout
                android:id="@+id/daqiqa_liner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/clock"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Daqiqalar"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/aksiya"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="30dp"
            app:layout_constraintLeft_toRightOf="@id/daqiqalar"
            app:layout_constraintTop_toBottomOf="@id/tariflar"
            app:layout_constraintBottom_toTopOf="@id/ussd"
            app:layout_constraintRight_toRightOf="parent">
            <LinearLayout
                android:id="@+id/aksiya_liner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/newspaper"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Aksiyalar"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/sms"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/daqiqalar"
            app:layout_constraintRight_toLeftOf="@id/ussd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:id="@+id/sms_liner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/mail"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SMS paketlar"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ussd"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintLeft_toRightOf="@id/sms"
            app:layout_constraintTop_toBottomOf="@id/aksiya"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <LinearLayout
                android:id="@+id/ussd_liner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/keyboard"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="USSD xizmatlar"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>